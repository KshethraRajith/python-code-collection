import matplotlib.pyplot as plt
import pandas as pd
import seaborn as sns
import calendar


# Import and clean data
df = pd.read_csv('fcc-forum-pageviews.csv', parse_dates=['date'], index_col='date')
# Remove top 2.5% and bottom 2.5%
lower = df['value'].quantile(0.025)
upper = df['value'].quantile(0.975)
df = df[(df['value'] >= lower) & (df['value'] <= upper)]


def draw_line_plot():
    # Use a copy of the data
    data = df.copy()

    fig, ax = plt.subplots(figsize=(12, 6))
    ax.plot(data.index, data['value'], color='red', linewidth=1)
    ax.set_title("Daily freeCodeCamp Forum Page Views 5/2016-12/2019")
    ax.set_xlabel("Date")
    ax.set_ylabel("Page Views")

    # Save image and return fig
    fig.savefig('line.png')
    return fig


def draw_bar_plot():
    # Prepare data for monthly bar plot
    data = df.copy()
    data['year'] = data.index.year
    data['month'] = data.index.month

    # Group by year and month number and take mean
    grouped = data.groupby([data['year'], data['month']])['value'].mean().unstack()

    # Rename columns from month numbers to month names
    month_names = [calendar.month_name[i] for i in range(1, 13)]
    grouped.columns = month_names

    # Draw bar plot
    fig, ax = plt.subplots(figsize=(12, 8))
    grouped.plot(kind='bar', ax=ax)
    ax.set_xlabel("Years")
    ax.set_ylabel("Average Page Views")
    ax.legend(title='Months')

    fig.savefig('bar.png')
    return fig


def draw_box_plot():
    # Prepare data for box plots
    data = df.copy().reset_index()
    data['year'] = data['date'].dt.year
    data['month_num'] = data['date'].dt.month
    data['month'] = data['date'].dt.strftime('%b')

    # Sort by month number to ensure Jan..Dec order
    data = data.sort_values('month_num')

    # Draw box plots (year-wise and month-wise)
    fig, axes = plt.subplots(1, 2, figsize=(16, 6))

    # Year-wise box plot (trend)
    sns.boxplot(x='year', y='value', data=data, ax=axes[0])
    axes[0].set_title("Year-wise Box Plot (Trend)")
    axes[0].set_xlabel("Year")
    axes[0].set_ylabel("Page Views")

    # Month-wise box plot (seasonality)
    # We want months ordered from Jan to Dec using abbreviated names
    month_order = [calendar.month_abbr[i] for i in range(1, 13)]
    sns.boxplot(x='month', y='value', data=data, order=month_order, ax=axes[1])
    axes[1].set_title("Month-wise Box Plot (Seasonality)")
    axes[1].set_xlabel("Month")
    axes[1].set_ylabel("Page Views")

    fig.savefig('box.png')
    return fig
